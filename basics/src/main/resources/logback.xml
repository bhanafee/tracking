<?xml version="1.0"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>{"date" : "%d{yyyy-mm-dd'T'hh:mm:ss.SSS'Z',UTC}", "level": "%level", "logger": "%logger", "thread": "%thread", "message": "%message"}%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
